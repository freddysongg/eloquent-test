# Next.js Environment Variables
NEXT_PUBLIC_APP_NAME="Eloquent AI"
NEXT_PUBLIC_APP_VERSION="0.1.0"
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV="development"

# Clerk Authentication (Required)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your-clerk-publishable"
CLERK_SECRET_KEY="sk_test_your-clerk-secret"

# Clerk Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"
CLERK_WEBHOOK_SECRET="whsec_your-clerk-webhook-secret"

# API Configuration
NEXT_PUBLIC_API_BASE_URL="http://localhost:8000"
NEXT_PUBLIC_API_VERSION="v1"
NEXT_PUBLIC_API_TIMEOUT="30000"

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL="ws://localhost:8000/ws"
NEXT_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL="5000"
NEXT_PUBLIC_WEBSOCKET_MAX_RECONNECT_ATTEMPTS="5"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_DEBUG="true"
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING="false"

# Performance Configuration
NEXT_PUBLIC_REQUEST_TIMEOUT_MS="10000"
NEXT_PUBLIC_STREAMING_TIMEOUT_MS="60000"
NEXT_PUBLIC_MAX_MESSAGE_LENGTH="4000"
NEXT_PUBLIC_MAX_CHAT_HISTORY="50"

# UI Configuration
NEXT_PUBLIC_THEME_DEFAULT="light"
NEXT_PUBLIC_CHAT_ANIMATION_ENABLED="true"
NEXT_PUBLIC_TYPING_INDICATOR_ENABLED="true"

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST=""

# Development Configuration
NEXT_PUBLIC_DEV_MODE="true"
NEXT_PUBLIC_MOCK_API="false"
NEXT_PUBLIC_LOG_LEVEL="debug"
