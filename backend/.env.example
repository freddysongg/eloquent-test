# Application Settings
APP_NAME="Eloquent AI Backend"
APP_VERSION="0.1.0"
DEBUG=True
ENVIRONMENT="development"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
RELOAD=True

# Database Configuration
DATABASE_URL="postgresql+asyncpg://eloquent:eloquent_password@localhost:5432/eloquentai_dev"
DATABASE_ECHO=False
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_DB=0

# Authentication & Security
SECRET_KEY="your-super-secret"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Clerk Authentication
CLERK_PUBLISHABLE_KEY="pk_test_your-clerk-publishable"
CLERK_SECRET_KEY="sk_test_your-clerk-secret"
CLERK_JWT_TEMPLATE="eloquent-ai"

# AI Services
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api"
CLAUDE_MODEL="claude-3-sonnet-20240229"
CLAUDE_MAX_TOKENS=4096

# Pinecone Configuration
PINECONE_API_KEY="your-pinecone-api"
PINECONE_ENVIRONMENT="us-east-1"
PINECONE_INDEX_NAME="ai-powered-chatbot-challenge"
PINECONE_INDEX_HOST="https://ai-powered-chatbot-challenge-omkb0qa.svc.aped-4627-b74a.pinecone.io"

# Embedding Model Configuration
EMBEDDING_MODEL="llama-text-embed-v2"
EMBEDDING_DIMENSIONS=1024
EMBEDDING_CACHE_TTL_SECONDS=3600
EMBEDDING_REQUEST_TIMEOUT_SECONDS=10

# Rate Limiting
RATE_LIMIT_GLOBAL_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_AUTHENTICATED_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ANONYMOUS_REQUESTS_PER_MINUTE=20
RATE_LIMIT_LLM_REQUESTS_PER_MINUTE=10

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE="logs/app.log"

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://localhost:3000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"]
CORS_ALLOW_HEADERS=["*"]

# Monitoring & Observability
SENTRY_DSN=""
PROMETHEUS_METRICS_ENABLED=True
HEALTH_CHECK_ENABLED=True

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000

# Performance Settings
REQUEST_TIMEOUT_SECONDS=30
RESPONSE_TIMEOUT_SECONDS=60
MAX_CHAT_HISTORY_LENGTH=50
